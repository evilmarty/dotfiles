[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	editor = vim
	quotepath = false
[branch]
	autosetuprebase = always
[push]
	default = current
[difftool]
	prompt = false
[mergetool]
	keepBackup = false
	prompt = false
[merge]
	tool = opendiff
[alias]
	s = status
	co = checkout
	cp = cherry-pick
	c = commit -av
	br = branch
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	l = log
[include]
  path = ~/.gitconfig.local
