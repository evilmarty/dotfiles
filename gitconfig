[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  editor = vim
  quotepath = false
[branch]
  autosetuprebase = always
[push]
  default = current
[difftool]
  prompt = false
[mergetool]
  keepBackup = false
  prompt = false
[merge]
  tool = opendiff
[alias]
  s = status
  co = checkout
  cp = cherry-pick
  c = commit -av
  cm = commit -m
  br = branch
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  l = log
  a = commit -v --amend
  nb = checkout -b
  wipe = reset --hard
  abort = rebase --abort
  cont = rebase --continue
  yolo = push --force
[include]
  path = ~/.gitconfig.local
[diff]
	algorithm = patience
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[user]
	email = marty@zalega.me
	name = Marty Zalega
