[alias]
  s = status
  co = checkout
  cp = cherry-pick
  c = commit -pv
  cm = commit -m
  fu = commit --fixup
  br = branch
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  l = log
  a = commit -v --amend --reuse-message=HEAD
  cu = commit --amend
  nb = "!f() { (git branch -D \"$1\" 2> /dev/null || true) && git checkout -b \"$1\"; }; f"
  wipe = reset --hard
  abort = rebase --abort
  cont = rebase --continue
  yolo = push --force
  pop = stash pop
  squash = rebase --autosquash -i
  go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"
  pb = checkout --orphan
  pr = "!gh pr create"
  ready = "!f() { local b=\"${1:-`git config --default main --get init.defaultbranch`}\"; git stash; git checkout \"$b\"; git pull origin \"$b\"; git stash pop; }; f"
  only-main = "!git branch --no-merged | xargs git branch -D"
  root = rev-parse --show-toplevel

[apply]
  whitespace = fix

[branch]
  autosetuprebase = always

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[commit]
  gpgsign = true

[core]
  editor = vim
  quotepath = false
  trustctime = false
  precomposeunicode = false
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[init]
  defaultBranch = main

[diff]
  algorithm = patience
  renames = copies

[diff "bin"]
  textconv = hexdump -v -C

[difftool]
  prompt = false

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f

[help]
  autocorrect = 1

[merge]
  guitool = opendiff

[mergetool]
  keepBackup = false
  prompt = false

[push]
  default = current

[pull]
  rebase = true

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[interactive]
  diffFilter = delta --color-only --features=interactive

[delta]
  features = decorations
  colorMoved = default

[delta "interactive"]
  keep-plus-minus-markers = false

[delta "decorations"]
  # author: https://github.com/torarnv
  dark = true
  file-style = omit
  hunk-header-decoration-style = omit
  hunk-header-file-style = magenta
  hunk-header-line-number-style = dim magenta
  hunk-header-style = file line-number syntax
  line-numbers = true
  minus-emph-style = bold red 52
  minus-empty-line-marker-style = normal "#3f0001"
  minus-non-emph-style = dim red
  minus-style = bold red
  plus-emph-style = bold green 22
  plus-empty-line-marker-style = normal "#002800"
  plus-non-emph-style = dim green
  plus-style = bold green
  syntax-theme = OneHalfDark
  whitespace-error-style = reverse red
  zero-style = dim syntax

[include]
  path = ~/.gitconfig_local
